class Fixnum
  define_method(:ping_pong) do
  a_array = []
  input = (0..self)
  input.each() do |num|
    if (num == 0)
    a_array.push(num)
    elsif (num % 15 == 0)
    a_array.push ("ping-pong")
    elsif (num % 3 == 0)
    a_array.push ("ping")
    elsif (num % 5 == 0)
    a_array.push ("pong")
    else
    a_array.push(num)
  end
  end
  a_array
  end
  end
